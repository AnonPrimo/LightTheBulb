<Window x:Class="WpfApp_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_v2"
        mc:Ignorable="d"
        Title="Головне меню" Height="350" Width="525" Background="Black"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image Name="imageForMW" Grid.RowSpan="4" Source="Pictures\sheep.jpg"/>

        <Button x:Name="button_NG" Grid.Row="1" Content="Нова гра" Width="85" Height="30" VerticalAlignment="Bottom" Click="button_NG_Click"/>
            <Button x:Name="button_ContinueG" Grid.Row="2" Content="Продовжити" Width="85" Height="30" VerticalAlignment="Center" Click="button_ContinueG_Click"/>
        <Button Name="button_Exit" Grid.Row="3" Content="Вихід"  Width="85" Height="30" VerticalAlignment="Top" Click="button_Exit_Click"/>
    </Grid>
</Window>
