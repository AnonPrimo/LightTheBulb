<Window x:Class="WpfApp_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_v2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Button x:Name="button_NG" Grid.Row="1" Content="New game" Width="75" Height="30" VerticalAlignment="Bottom"/>
            <Button x:Name="button_Play" Grid.Row="2" Content="Play" Width="75" Height="30" VerticalAlignment="Center"/>
        <Button Name="button_Exit" Grid.Row="3" Content="Exit"  Width="75" Height="30" VerticalAlignment="Top"/>
    </Grid>
</Window>
